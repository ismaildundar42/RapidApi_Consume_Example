@model List<BookingApiLocationSearchModel>

@{
	Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">

	<br />
	@using (Html.BeginForm("Index", "SearchLocationId",FormMethod.Post))
	{
		<label>Şehir adını giriniz : </label>
		<input type="text" name="cityName" class="form-control" />
		<br />
		<button class="btn btn-success">Şehir Id Getir</button>
	}

	<table class="table table-bordered"> 

		@foreach(var x in Model)
		{
			<tr>
				<td>@x.dest_id</td>
			</tr>
		}

	</table>
	<br />
	<a href="/BookingByCity/Index/" class="btn btn-dark">Yeni Otel Rezervasyon Bilgisi</a>

</div>